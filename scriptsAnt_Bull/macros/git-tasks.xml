<project>

<property environment="env"></property>

<!-- 
  Avant de lancer le script fixer les paramètres d'environnement.

		set JAVA_HOME=d:\Programs\JBuilder9\jdk1.4
		set ANT_HOME=D:\Programs\ant\apache-ant-1.5.3-1
		set GITHOME=C:\msysgit\msysgit
		
		set PATH=%ANT_HOME%\bin;%JAVA_HOME%\bin;%GITHOME%
-->

	<!--
		= = = = = = = = = = = = = = = = = macrodef: git = = = = = = = = = = =
		= = = = = =
	-->
	<macrodef name="git">
		<attribute name="command" />
		<attribute name="dir" default="" />
		<element name="args" optional="true" />
		<sequential>
			<echo file="GIT_COMMAND_LOG" message="git @{command} @{dir} @{args} &#xa;"
				append="yes" />
			<exec executable="${env.GITHOME}\bin\git.exe" dir="@{dir}">
				<env key="PATH" path="${env.PATH}:${env.GITHOME}/mingw/bin"/>			
				<arg value="@{command}" />
				<args />
			</exec>
		</sequential>
	</macrodef>
	<macrodef name="git-init">
		<attribute name="repository" />
		<sequential>
			<git command="init">
				<args>
					<arg value="@{repository}" />
				</args>
			</git>
		</sequential>
	</macrodef>
	<macrodef name="git-add">
		<attribute name="path" />
		<attribute name="target" />
		<sequential>
			<git command="add" dir="@{path}">
				<args>
					<arg value="@{target}" />
				</args>
			</git>
		</sequential>
	</macrodef>
	<macrodef name="git-commit">
		<attribute name="path" />
		<attribute name="message" />
		<sequential>
			<git command="commit" dir="@{path}">
				<args>
					<arg value="@{message}" />
				</args>
			</git>
		</sequential>
	</macrodef>
	<macrodef name="git-clone-pull">
		<attribute name="repository" />
		<attribute name="dest" />
		<attribute name="remotebranchname" />
		<attribute name="localbranchname" />
		<sequential>
			<git command="clone" dir="@{dest}" >
				<args>
					<arg value="-b" />
					<arg value="@{remotebranchname}" />
					<arg value="@{repository}" />
					<arg value="@{localbranchname}" />
				</args>
			</git>
			<git command="pull" dir="@{dest}/@{localbranchname}" >
			<args>
				<arg value="origin" />
				<arg value="@{remotebranchname}:refs/heads/@{localbranchname}" />
			</args>
			</git>
		</sequential>
	</macrodef>
	<!-- path est le path de la branche locale -->
	<!-- branch est le nom de la branche à créer en remote -->
	<!-- repository est l'url du repository remote -->
	<macrodef name="git-remote-add">
		<attribute name="path" />
		<attribute name="branch" />
		<attribute name="repository" />
		<sequential>
			<echo file="DUMP" message="branch: @{branch} repos: @{repository}" />
			<git command="remote" dir="@{path}">
				<args>
					<arg value="add" />
					<arg value="@{branch}" />
					<arg value="@{repository}" />
				</args>
			</git>
		</sequential>
	</macrodef>
	<macrodef name="git-push">
		<attribute name="path" />
		<attribute name="branch" />
		<attribute name="head" />
		<sequential>
			<git command="push" dir="@{path}">
				<args>
					<arg value="@{branch}" />
					<arg value="@{head}" />
				</args>
			</git>
		</sequential>
	</macrodef>
	<macrodef name="test">
		<attribute name="path" default="hello" />
		<sequential>
			<fail message="fail">
				<condition>
					<not>
						<contains string="@{path}" substring="hello" />
					</not>
				</condition>
			</fail>
		</sequential>
	</macrodef>
	<macrodef name="git-revision">
		<attribute name="path" />
		<attribute name="output" />
		<sequential>
			<exec executable="git" outputproperty="head" dir="@{path}">
				<arg value="rev-parse" />
				<arg value="HEAD" />
			</exec>
			<echo file="GIT_REVISION_LOG" message="Found revision: ${head}" />
			<exec executable="git" outputproperty="dirty">
				<arg value="diff" />
				<arg value="--shortstatt" />
			</exec>
			<condition property="@{output}" value="${head}" else="${head} (dirty)">
				<equals arg1="${dirty}" arg2="" />
			</condition>
		</sequential>
	</macrodef>
	<macrodef name="git-branch">
		<!-- path est le path de la branche locale -->
		<!-- branch est le nom de la branche à créer en remote -->
		<!-- url.push est l'URL git pour faire des push -->
		<attribute name="path" />
		<attribute name="branch" />
		<attribute name="url.push" />
		<sequential>
			<git command="branch" dir="@{path}">
				<args>
					<arg value="@{branch}" />
				</args>
			</git>
			<git command="remote" dir="@{path}" >
				<args>
					<arg value="set-url" />
					<arg value="--push" />
					<arg value="origin" />
					<arg value="@{url.push}" />
				</args>
			</git>
			
			<git command="push" dir="@{path}" >
				<args>
					<arg value="origin" />
					<arg value="origin:refs/heads/@{branch}" />
				</args>
			</git>
		</sequential>
	</macrodef>
	<macrodef name="git-tag">
		<!-- path est le path de la branche locale -->
		<!-- branch est le nom de la branche à créer en remote -->
		<!-- url.push est l'URL git pour faire des push -->
		<attribute name="path" />
		<attribute name="tag" />
		<attribute name="url.push" />
		<sequential>
			<git command="tag" dir="@{path}">
				<args>
					<arg value="@{tag}" />
				</args>
			</git>
			<git command="remote" dir="@{path}" >
				<args>
					<arg value="set-url" />
					<arg value="--push" />
					<arg value="origin" />
					<arg value="@{url.push}" />
				</args>
			</git>
			<git command="push" dir="@{path}" >
				<args>
					<arg value="origin" />
					<arg value="origin:refs/tags/@{tag}" />
				</args>
			</git>
		</sequential>
	</macrodef>

</project>